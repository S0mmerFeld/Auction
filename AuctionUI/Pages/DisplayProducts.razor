@inherits DisplayProductsBase
@using Microsoft.AspNetCore.Components.Web

@foreach (var item in Products)
{
<div class="col-md-3 mb-2">
    
    <div class="card">
        <a href="/ProductDetails/@item.Id">
            <img class="img-thumbnail" src="@item.ImageURL">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    @item.Name
                </h5>
                <p class="card-text">
                    <b>@item.Price.ToString("C")</b>
                </p>
            </div>
        </a>
        <div>
            <button class="btn btn-primary" @onclick="IncrementCount">+</button>
            <span>@currentCount</span>
            <button class="btn btn-primary" @onclick="DecrementCount">-</button>
            <span>(@currentCount)*(@item.Price)</span>
        </div>

    </div>
   

</div>}